<div class="whole">
  <div class="bg">
    <div class="content">
      <h1 class="message">ログイン -Log in-</h1>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス -Email-</label>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:'PC・携帯どちらでも可' %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード -Password-</label>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        </div>

        <div class="submit">
          <h4>-Log in-</h4>
          <%= f.submit 'ログイン', class:"submit-btn" %>
        </div>
      <% end %>

      <br>
      <h4>ユーザー登録がまだの方はこちらへ</h4>
      <%= link_to 'アカウント登録', new_user_registration_path, class:"sub-btn" %>
      <%= link_to '一覧へ戻る', :back, class:"back-btn" %>
    </div>
  </div>
</div>