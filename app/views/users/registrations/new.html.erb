<div class="whole">
  <div class="bg">
    <div class="content">
      <h1 class="message">-ユーザー登録して相談しよう！-</h1>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>

        <%= render "users/shared/error_messages", resources: f.object %>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">ニックネーム -nickname- </label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例）ﾈｺ太郎", maxlength:"40", autofocus: true %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス -Email-</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:'PC・携帯どちらでも可' %>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード -Password-</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
        </div>

        <div class="form-group">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード(確認) -Password confirmation-</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
        </div>
        <div class="submit">
          <h4>-Sign up-</h4>
          <%= f.submit '登録完了', class:"submit-btn" %>
        </div>
      <% end %>

      <br>
      <h4>アカウントをお持ちですか？</h4>
      <%= link_to 'ログイン画面へ', new_user_session_path, class:"sub-btn" %>
      <%= link_to '一覧へ戻る', :back, class:"back-btn" %>
    </div>
  </div>
</div>