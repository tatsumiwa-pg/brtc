<h2>Edit User - ユーザー情報編集 -</h2>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: @user %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Nickname - ニックネーム- </label>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"40", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード（変更したくない場合はカラのまま進んでください）</label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">新しいパスワードを設定する場合は必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Password - 変更を保存するには、パスワードの入力が必要です -</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :current_password, autocomplete: "current-password", class:"input-default", id:"current-password", placeholder:'今のパスワード' %>
  </div>

  <div class="submit-btn">
    <%= f.submit '変更する' %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>退会しますか？</p>
<%= link_to '退会', user_registration_path, method: :delete, data: { confirm: "Are you sure?" } %>

<%= link_to '一覧へ戻る', :back %>
