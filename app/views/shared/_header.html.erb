<header>
  <div class="header-wrap">
    <div class="icons">
      <%= link_to image_tag("tcbr-home.png", class:"top-icon-img"), "/" %>
    </div>
    <div class="icons">
      <%= link_to image_tag("home.png", class:"top-icon-img"), "/" %>
    </div>
    <div class="menu-bar">
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      </form>
      <%= link_to 'カテゴリー', "#", class:"btn" %>
      <%= link_to '相談する', new_consultation_path, class:"btn" %>
    </div>
    <div class="user-menu-wrap">
      <ul class="user-menu-list">
        <% if user_signed_in? %>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete %></li>
        <li><%= link_to "#{current_user.nickname}", edit_user_registration_path %></li>
        <% else %>
        <li><%= link_to '新規登録', new_user_registration_path %></li>
        <li><%= link_to 'ログイン', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>